include config.pug

block setting 

doctype html
html(lang='en' class="overflow-hidden")
	head
		block head

	//- add class for wrapper
	- var body_class			= []
	- var project_wrapper_class = []
	- var main_content_class	= []
	- var header_class			= []
	- var footer_class			= []

	block pages_component
	body(class=`${body_class} `)  
		.loading()
			.loading-wrap
				<div class="load-wrapp">
					.logo 
						.img 
							img(src="assets/images/logo.png", alt="")
				</div>


		.container(class="smooth-scroll")
			if layout
				if header
					header(class=`${header_class}`)
						block header
				div(class=`${main_content_class}`)
					block body
				if footer
					footer(class=`${footer_class}`)
						block footer

		.menu-bar 
			.bl.bl-left
				a(href="story.html").page-title Story
			.bl.bl-right
				.menu-icon 
					span
					span
					span
		.menu-body 
			.content-w.size-lg
				.wrap 
					.v-line 
					ul 
						li.home.active 
							a(href="index.html") Home
						li.story 
							a(href="story.html") Story
						li.contact 
							a(href="contact.html") Contact
						li.projects 
							a(href="projects.html#branding") Projects
		if modal 
			block modal
		.fk-layer
		block javascript